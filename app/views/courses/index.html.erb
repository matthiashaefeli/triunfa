<div class="course-index">
    <h1>Cursos</h1>
    <br>
    <div>
        <table class="table table-hover table-bordered" id="course-table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Fecha inicio</th>
                    <th scope="col">Fecha final</th>
                </tr>
            </thead>
            <tbody>
            <% @courses.each do |c| %>
                <tr>
                <th scope="row"><%= c.id %></th>
                <td><%= link_to c.name, course_path(c.id) %></td>
                <td><%= c.start %></td>
                <td><%= c.end %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div>
        <p id="new-course">Crear nuevo Curso</p>
        <div id="new-course-hidden">
            <%= render "new.html.erb" %>
        </div>
    </div>
    <p><%= link_to "Pagina de Inicio", root_path %></p>
</div>
