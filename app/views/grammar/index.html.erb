          <textarea rows="4" cols="45" class="textarea"></textarea>
        </div>
        <div class="button-div">
          <button type="button" class="grammar-button">Verificar la gramática</button>
        </div>
        <div id="errors"></div>
        <div><h3 id="text-checked"></h3></div>
      </div>
