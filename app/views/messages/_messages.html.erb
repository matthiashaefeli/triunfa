
<% @messages.each do |m| %>
    <div class="chats">
        <div class="message-user">
        <%= m.user.name %> <%=m.user.lastname %> dijo:
        </div>
        <div class="message-body">
        <%=m.body %>
        </div>
        <div class="message-image">
        <% if  m.avatar_file_name != nil %>
        <br>
        <%= image_tag m.avatar.url(:medium) %>
        <br>
        <% end %>
        </div>
        <div class="message-fin">
        <small>el <%= l m.created_at, format: :short %></small>
        </div>
    </div>
    <%= render "comments/all", locals: { chat: m } %>
    <div class="comment">
        <div class="show-comments"><i class="fa fa-comment-o" aria-hidden="true"> Comentar</i></div>
        <%= render "comments/new", locals: { message: m.id } %>
    </div>
    <hr>
<% end %>