<div class="under-nav group-index">
  <div class="group-inner">
    <p><%= link_to 'Back', root_path, class: "btn btn-sm back-button" %></p>
    <h1>Statistics</h1>
    <hr>
    <p><strong>Courses: </strong><%= @courses.count %></p>
    <p><strong>Activ Groups: </strong><%= @agroups.count %></p>
    <p><strong>Closed Groups: </strong><%= @igroups.count %></p>
    <p><strong>Teachers: </strong><%= @teachers.count %></p>
    <p><strong>Students in Groups: </strong><%= @students.count %></p>
    <p><strong>Registered Students within no Group: </strong><%= @users.count - @students.count - @teachers.count - @admins.count%></p>
    <hr>
    <p><%= link_to "Click here to download the Statistics", statistics_path(format: :xlsx) %></p>
    <p class="stat-show"><i class="fas fa-angle-double-down"></i> See old statistics</p>
    <div class="stat-show-child">

      <p><%= link_to "Create New Statistic", statistics_path, :method => "Post" %></p>
      <table class="table table-hover table-bordered" id="estatistic-table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Courses</th>
            <th>Groups A</th>
            <th>Groups C</th>
            <th>Teachers</th>
            <th>Students</th>
            <th>Reg. St. No</th>
          </tr>
        </thead>
        <tbody>
          <% @statistics.each do |e| %>
          <tr>
            <td><%= l e.created_at, format: :short %></td>
            <td><%= e.courses %></td>
            <td><%= e.groups %></td>
            <td><%= e.igroups %></td>
            <td><%= e.teachers %></td>
            <td><%= e.students %></td>
            <td><%= e.nostudents %></td>
            <td><%= link_to "Delete Statistic", statistic_path(e.id), :method => "delete", :onclick => "return confirm('Quiere borrar la estadÃ­stica?')" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>