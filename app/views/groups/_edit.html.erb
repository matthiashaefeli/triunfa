<div>
  <%= form_for :group, url: group_path(@group.id), method: "put" do |f| %>
    <p>
      <%= f.label :ciudad %>
      <%= f.text_field :city %>
      <%= f.label :nombre %>
      <%= f.text_field :name %>
      <%= f.label :clave %>
      <%= f.text_field :key %>
    </p>
    <p>
      <%= f.label :instructor %>
      <%= f.select :teacher, options_for_select(teacher_array, selected: actual_teacher(@group.teacher)) %>
      <%= f.label :cursos %>
      <%= f.select :course, options_for_select(course_array, selected: [@group.course.name, @group.course.id]) %>
    </p>
    <p>
      <%= f.label :lunes %>
      <%= f.check_box :days, {multiple: true}, "Lunes", nil %>

    </p>
    <p>
      <%= f.label :martes %>
      <%= f.check_box :days, {multiple: true}, "Martes", nil %>

    </p>
    <p>
      <%= f.label :miercoles %>
      <%= f.check_box :days, {multiple: true}, "Miercoles", nil %>

    </p> 
    <p>
      <%= f.label :jueves %>
      <%= f.check_box :days, {multiple: true}, "Jueves", nil %>

    </p> 
    <p>
      <%= f.label :viernes %>
      <%= f.check_box :days, {multiple: true}, "Viernes", nil %>

    </p>
    <p>
      <%= f.label :sabado %>
      <%= f.check_box :days, {multiple: true}, "Sabado", nil %>

    </p> 
    <p>
      <%= f.label :domingo %>
      <%= f.check_box :days, {multiple: true}, "Domingo", nil %>

    </p>
    <p>
      <%= f.label :fecha_inicio %>
      <%= f.date_field :startdate %>
      <%= f.label :fecha_final %>
      <%= f.date_field :enddate %>
    </p>
    <p>
      <%= f.label :activo %>
      <%= f.check_box(:activ) %>
    </p>
    <p>
      <%= f.submit "Guardar Cambios", :onclick => "return confirm('Despues de desactivar el grupo los estudiantes no tienen acceso al portal, el foro y la tarea del grupo se borra')" %>
    </p>
  <% end %>
</div>