<div class="room">
  <% searched_user = check_user(current_user) %>
  <% if searched_user == Teacher  %>
    <p><%= link_to "Regresar", rooms_path %></p>
  <% else %>
    <%= link_to "Regresar", root_path %>
  <% end %>
  <h3>Foro del Grupo <%= @room.group.name %></h3>
  <%= form_for :message, url: messages_path, remote: "true" do |f| %>
    <p>
      <%= f.label :adjuntar_imagen %>
      <%= f.file_field :avatar, :class => "file-field" %>
    </p>
    <p>
      <%= f.text_area :body, :class => "text-area", :id => "room-message-text" %>
      <%= hidden_field_tag "room", @room.id  %>
    </p>
    <br>
    <%= f.submit "Enviar Mensaje", :id => "room-message-text-submit" %>
  <% end %>
  <hr>
  <div id="message_room<%= @room.id %>">
  <%= render "messages/messages" %>
  </div>
</div>