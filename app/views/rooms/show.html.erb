<div class="room">
  <h3>Forum del Grupo <%= @room.group.name %></h3>
  <%= form_for :message, url: messages_path do |f| %>
    <p>
      <%= f.label :adjuntar_imagen %>
      <%= f.file_field :avatar, :class => "file-field" %>
    </p>
    <p>
      <%= f.label :text %>
      <%= f.text_area :body, :class => "text-area", :id => "room-message-text" %>
      <%= hidden_field_tag "room", @room.id  %>
    </p>
    <br>
    <%= f.submit "Enviar Mensaje", :id => "room-message-text-submit", remote: "true" %>
  <% end %>
  <hr>
  <div id="message_room<%= @room.id %>">
  <%= render "messages/messages" %>
  </div>
  <%= link_to "Regresar", root_path %>
</div>