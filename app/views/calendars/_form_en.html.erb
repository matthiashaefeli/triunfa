<div>
  <h3>New event</h3>
  <%= form_for :event, url: events_path do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :date %>
      <%= f.datetime_field :start_time %>
    </p>
    <p>
      <%= f.label :comments %>
      <%= f.text_field :description %>
    </p>
    <p>
      <%= f.submit "Save" %>
    </p>
  <% end %>
</div>