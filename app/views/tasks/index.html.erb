<div class="task-index container under-nav">
    <% searched_user = check_user(current_user) %>
    <div class="task-assignments">
        <% if searched_user == Admin || searched_user == Teacher %>
            <h4>Todas las actividades:</h4>
            <% for assignment in @group.course.assignments %>
                <%= link_to assignment_path(assignment.id, :group => @group.id) do %>
                    <p><strong><%= assignment.name %></strong> <span><%= assignment.points %> Creditos</span></p>
                <% end %>
            <% end %>
        <% else %>
            <h4>Mis actividades terminados:</h4>
            <% total_points_done = 0 %>
            <% finished_ass(current_user).each do |f| %>
                <% if f.assignment.course == @group.course %>
                    <% total_points_done += f.assignment.points %>
                    <p><%= f.assignment.name %>: <span><%= f.assignment.points %></span></p>
                <% end %>
            <% end %>
            <p>Tienes <%= total_points_done %> Creditos de 40</p>
        <% end %>
    </div>
    <div class="task-tasks">
        
        <% if searched_user == Teacher  %>
            <p><%= link_to "Regresar", rooms_path %></p>
            <h2>Crear una Tarea para el Grupo <%= @group.name %></h2>
            <%= form_for :task, url: tasks_path  do |f| %>  
                <p>
                    <%= f.text_area :body, :class => "text-area" %>
                </p>
                <p>
                    <%= f.label :Terminar_antes_de %>
                    <%= f.date_field :end %>
                    <%= hidden_field_tag "group", @group.id  %>
                </p>
                <p>
                    <%= f.label :link %>
                    <%= f.text_field :link %>
                </p>
                <p>
                    <%= f.label :adjuntar_archivo %>
                    <%= f.file_field :document, :class => "file-field"  %>
                </p>

                <%= f.submit "Crear Tarea" %>
            <% end %>
            <br>
            <hr>
        <% elsif searched_user == Student %>
                <h2>Mi Tarea:</h2>
                <hr>
        <% else %>
                <h2>Tarea del Grupo:</h2>
                <hr>
        <% end %>

        <div>
            <%= render "tasks" %>
        </div> 
    </div>
</div>