<p><%= link_to "Regresar", rooms_path, class: "btn btn-sm back-button" %></p>
<div class="forum-title">
    <h2>Crear una Tarea para el Grupo <%= @group.name %></h2>
    <%= form_for :task, url: tasks_path  do |f| %>  
      <p>
        <%= f.text_area :body, :class => "text-area", :placeholder => "Escribe aquÃ­..." %>
      </p>
      <p>
        <%= f.label :Terminar_antes_de %>
        <%= f.date_field :end %>
        <%= hidden_field_tag "group", @group.id  %>
      </p>
      <p>
        <%= f.label :link %>
        <%= f.text_field :link %>
      </p>
      <p>
        <%= f.label :adjuntar_archivo %>
        <%= f.file_field :document, :class => "file-field"  %>
      </p>
      <%= f.submit "Crear Tarea" %>
    <% end %>
</div>
