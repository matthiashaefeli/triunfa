<% @chats.each do |c| %>
    <div class="chats" id="chat<%= c.id %>">
        <div class="chat-user">
        <%= c.user.name %> <%=c.user.lastname %> dijo:
        </div>
        <div class="chat-body">
        <%=c.body %>
        </div>
        <div class="chat-image">
        <% if  c.avatar_file_name != nil %>
        <br>
        <%= image_tag c.avatar.url(:medium) %>
        <br>
        <% end %>
        </div>
        <div class="chat-fin">
        <small>el <%= l c.created_at, format: :short %></small>
        </div>
    </div>
    <%= render "comments/all", locals: { chat: c } %>
    <div class="comment">
        <div class="show-comments"><i class="fa fa-comment-o" aria-hidden="true"> Comentar</i></div>
            <%= render "comments/new", locals: { chat: c } %>
    </div>
    <hr>
<% end %>