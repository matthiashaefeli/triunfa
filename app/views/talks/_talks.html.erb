<div class="teacher-talk">
    <h2>Foro Instructores</h2>
    <%= form_for :talk, url: talks_path, remote: "true"  do |f| %>  
        <p>
            <%= f.label :adjuntar_imagen %>
            <%= f.file_field :avatar, :class => "file-field" %>
        </p>
        <p>
            <%= f.text_area :body, :class => "text-area", :id => "talk-text", :placeholder => "Escribe aqui..." %>
        </p>

        <%= f.submit "Enviar Mensaje", :class => "talk_send", :id => "talk-text-submit" %>
    <% end %>
    <br>
    <hr>
    <div id="talk-table">
            <%= render "talks/talk" %>
    </div> 
    <p><%= link_to "Ver mas Mensajes", teachers_path(limit: (@talks_limit.to_i + 5)) %></p>
</div>

