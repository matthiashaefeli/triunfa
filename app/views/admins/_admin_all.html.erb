
<% if (Admin.find_by(user: current_user).super) %>
  <% super_status = true %>
<% else %>
  <% super_status = false %>
<% end %>
<h1>Admins</h1>
<input type="text" class="mySearch" id="adminTableSearch" placeholder="Buscar por Nombre..">
<table class="table table-hover table-bordered" id="admin-table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Email </th>
      <th scope="col">SÃºper</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.user.name %></td>
      <td><%= admin.user.lastname %></td>
      <td><%= mail_to admin.user.email %></td>
      <td><%= admin.super ? "Si" : "No" %></td>
      <% if super_status %>
        <td>
          <%= link_to admin_path(admin.id), :method => "delete" do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<div>
  <% if super_status %>
    <p id="new-admin"><i class="fa fa-arrow-right" aria-hidden="true"></i> Agregar Admin</p>
  <% end %>
  <div id="new-admin-hidden">
    <%= render "admins/new.html.erb" %>
  </div>
</div>
