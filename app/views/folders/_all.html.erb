<div>
    <% searched_user = check_user(current_user) %>
    <% for folder in @folders %>
        <div>
                <p>
                    <span class="papers-text"><i class="fas fa-archive"> <%= folder.name %></i></span>&nbsp&nbsp&nbsp&nbsp
                    <% if searched_user == Admin %>
                        <span class="folders">
                            <i class="fas fa-plus-square"></i>
                        </span>
                        <span>
                            <%= link_to folder_path(folder.id), :method => "delete"  do %>
                            <i class="fas fa-trash-alt"></i>
                            <% end %>
                        </span>
                    <% end %>
                </p>
                <div class="add-papper">
                        <%= form_for :paper, url: papers_path  do |f| %>  
                        <p>
                            <%= f.label :nombre %>
                            <%= f.text_field :name %>
                            <%= hidden_field_tag "folder", folder.id  %>
                        </p>
                        <p>
                            <%= f.label :adjuntar_archivo %>
                            <%= f.file_field :document %>
                        </p>
                        <p>
                            <%= f.label :link %>
                            <%= f.text_field :link %>
                        </p>
                    
                        <%= f.submit "Adjuntar Archivo" %>
                    <% end %>       
                </div>
                <div class="papers-all">
                    <ul>
                        <% for paper in folder.papers %>
                            <li>
                                <% if paper.link == "" || paper.link == nil %>
                                    </i> <%= link_to paperdownload_path(paper.id) do %>
                                        <i class="fas fa-file"> <%= paper.name %></i>
                                    <% end %>
                                <% else %>
                                    </i> <%= link_to paper.link, target: "_blank" do %>
                                        <i class="fas fa-file"> <%= paper.name %></i>
                                    <% end %>
                                <% end %>
                                <% if searched_user == Admin %>
                                &nbsp&nbsp&nbsp&nbsp<span>
                                        <%= link_to paper_path(paper.id), :method => "delete"  do %>
                                            <i class="fas fa-trash-alt"></i>
                                        <% end %>
                                    </span>
                                <% end %>
                            </li>
                        <% end %>
                    </ul>
                </div>
        </div> 
    <% end %>
</div>