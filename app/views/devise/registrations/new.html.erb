<div class="under-nav">
  <%= render "layouts/errors" %>
</div>
<div class="text-center flex-container">
  <div class="item-login">
      <%= image_tag "logo.png", :class => "logo_login" %>
  </div>
  <div class="item-login" id="link-to-item-register">
    <h2>Registrar</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :clave_del_grupo %><br/>
        <%= link_to "¿Donde consigo esta clave?", "../info.pdf", target: "_blank" %> 
        <%= password_field :group, :key %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :nombre %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.label :apellido %><br />
        <%= f.text_field :lastname, autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="field">
        <%= f.label :Contraseña %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> dígitos)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <div class="field">
        <%= f.label :confirmación_de_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Registrar" %>
      </div>
    <% end %>
    <br>
    <%= link_to "Entrar", new_user_session_path(anchor: "link-to-item-login") %>
  </div>
</div> 