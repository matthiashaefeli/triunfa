<div>
    <%= form_for :conversation, url: conversations_path do |f| %>  
        <p>
            <%= f.text_area :body, :class => "text-conversation" %>
        </p>
        <%= hidden_field_tag "table", @table.id  %>

        <%= f.submit "Enviar Mensaje"%>
    <% end %>
    <%= render "conversations/conversations.html.erb" %>
</div>