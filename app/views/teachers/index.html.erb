<div class="course-index">
    <h1>Facilitadores</h1>
    <div>
        <table class="table table-hover table-bordered" id="teacher-table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Appelido</th>
                    <th scope="col">Correo</th>
                </tr>
            </thead>
            <tbody>
                <% @teachers.each do |t| %>
                <tr>
                    <td><%= link_to t.user.name, teacher_path(t.id) %></td>
                    <td><%= t.user.lastname %></td>
                    <td><%= t.user.email %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div>
        <p id="new-teacher">Adjuntar Facilitador</p>
        <div id="new-teacher-hidden">
            <%= render "new.html.erb" %>
        </div>
    </div>
    <p><%= link_to "Pagina de Inicio", root_path %></p>
</div>