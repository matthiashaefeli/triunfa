  <div class='title-course-two'>
    <h1 class="spanish">CURSOS</h1>
    <h1 class="english change-language">COURSES</h1>
  </div>
  <div class='course-images'>
    <div class='image-text-course'>
      <div><%= image_tag('course-inline.png', class: 'image-grad-book responsive-image') %></div>
