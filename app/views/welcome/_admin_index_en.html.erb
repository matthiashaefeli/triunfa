<div class="student-index">
  <div>
    <%= render "online.html.erb" %>
  </div>
  <div>
    <%= link_to courses_path, class: "btn btn-sm student-link-button" do %>
      <p>Courses</p>
      <%= image_tag "curso_student.png", class: "images-link-comunity" %> 
    <% end %>
  </div>
  <div>
    <%= link_to teachers_path, class: "btn btn-sm student-link-button" do %>
      <p>Teachers/Admin</p>
      <%= image_tag "chat-512.png", class: "images-link-comunity" %> 
    <% end %>
  </div>
  <div>
    <%= link_to groups_path, class: "btn btn-sm student-link-button" do %>
      <p>Groups</p>
      <%= image_tag "group1.png", class: "images-link-comunity" %> 
    <% end %>
  </div>
  <div>
    <%= link_to students_path, class: "btn btn-sm student-link-button" do %>
      <p>Students</p>
      <%= image_tag "students.png", class: "images-link-comunity" %> 
    <% end %>
  </div>
  <div>
    <%= link_to libraries_path, class: "btn btn-sm student-link-button" do %>
      <p>Library</p>
      <%= image_tag "otherbooks.png", class: "images-link-comunity" %> 
    <% end %>
  </div>
  <div>
    <%= link_to statistics_path, class: "btn btn-sm student-link-button" do %>
      <p>Statistics</p>
      <%= image_tag "estadistica.png", class: "images-link-comunity" %> 
    <% end %>
  </div>
  <div>
    <%= link_to edituser_path(current_user.id), class: "btn btn-sm student-link-button" do %>
      <p><%= current_user.name %></p>
      <% if current_user.avatar_file_name == nil %>
        <%= image_tag "user1.png", class: "images-link-comunity" %> 
      <% else %>
        <%= image_tag current_user.avatar.url(:thumb), class: "images-link-comunity" %>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= link_to comunity_index_path, class: "btn btn-sm student-link-button" do %>
      <p>Community</p>
      <%= image_tag "comunity.png", class: "images-link-comunity" %> 
    <% end %>
  </div>
</div>