<% searched_user = check_user(current_user) %>
<% if searched_user == "new_user" %>
    <%= render "./students/new.html.erb" %>
<% end %>
<% if searched_user == "admin" || searched_user == "teacher" %>
    <p>Forums de los grupos</p>
    <% @rooms.each do |r| %>
        <p><%= link_to r.group.name, room_path(r.id) %> <%=  r.group.key %></p>
    <% end %>
<% end %>

<% if searched_user == "student" %>
    <h2>Forum</h2>
    <%= form_for :message, url: messages_path do |f| %>
        <%= f.label :text %>
        <%= f.text_area :body, id: "message-body" %>
        <p>
            <%= f.label :adjuntar_imagen %>
            <%= f.file_field :avatar %>
        </p>
        <br>
        <%= f.submit "Enviar Mensaje" %>
    <% end %>
    <%= render "messages/messages" %>
<% end %>